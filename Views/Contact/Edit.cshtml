@model Contact
@{
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;
}

<div class="d-flex justify-content-center mt-4 mb-5">
    <h2>@ViewBag.Title</h2>
</div>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"
         class="text-danger">
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">select a category</option>
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">
                    @category.Name
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control">
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-center">
        <button
            type="submit" class="btn btn-outline-primary mt-2 me-2">
            Submit
        </button>
        @if (ViewBag.Action == "Edit")
        {
            <a asp-controller="Contact"
               asp-action="Details"
               asp-route-id="@Model.Id"
               asp-route-slug="@Model.Slug"
               class="btn btn-outline-danger mt-2"
               style="width: 30vw">Cancel</a>
        }
        else
        {
            <a asp-controller="Contact"
               asp-action="Index"
               class="btn btn-outline-danger mt-2"
               style="width: 30vw">Cancel</a>
        }
    </div>
</form>
