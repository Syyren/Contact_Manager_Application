@model Contact
@{
    ViewBag.Title = "Delete Contact";
}

<!--This view is for deleting a contact-->

<div class="d-flex justify-content-center mt-4 mb-5">
    <h2 class="mb-2">Confirm Deletion</h2>
</div>

<div class="d-flex justify-content-center mt-3">
    <h3 class="mb-2">Your contact, @Model.FirstName @Model.LastName.</h3>
</div>

<form asp-action="Delete" method="post" class="d-flex justify-content-center">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex">
        <button type="submit" class="btn btn-outline-danger me-2" style="width: 30vw">
            Delete
        </button>

        <a asp-controller="Contact"
           asp-action="Details"
           asp-route-id="@Model.Id"
           asp-route-slug="@Model.Slug"
           class="btn btn-outline-primary"
           style="width: 30vw">Cancel</a>
    </div>
</form>
