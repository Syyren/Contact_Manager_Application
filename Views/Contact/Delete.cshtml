@model Contact
@{
    ViewBag.Title = "Delete Contact";
}
<div class="d-flex justify-content-center">
    <h2 class="mb-2">Confirm Deletion</h2>
</div>

<div class="d-flex justify-content-center">
    <h3 class="mb-2">Your contact, @Model.FirstName @Model.LastName.</h3>
</div>

<form asp-action="Delete" method="post" class="d-flex justify-content-center">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-outline-danger me-2">
        Delete
    </button>

    <a asp-controller="Contact" asp-action="Index"
       class="btn btn-outline-primary">Cancel</a>
</form>
